@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movies" class="table table-bordered table-hover" >
    <thead>
        <th>Movie</th>
        <th>Genre</th>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<img src='/content/image/" + movie.name + ".jpg' alt='movie image' style='width: 94px; height: 128px;'><br>" + movie.name;
                        }
                    },
                    {
                        data: "movieGenre.genre"
                    }
                ]
            });
        });
    </script>
}