@model Vidly.Models.Movie
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@switch (Model.MovieGenreId)
{
    case 1:
        <p>Genre: Comedy</p>
        break;
    case 2:
        <p>Genre: Action</p>
        break;
    case 3:
        <p>Genre: Family</p>
        break;
    case 4:
        <p>Genre: Romance</p>
        break;
    case 5:
        <p>Genre: Drama</p>
        break;
}
<p>Release Date: @string.Format("{0:dddd, MMMM d, yyyy}",Model.ReleaseDate)</p>
<p>Date Added: @string.Format("{0:dddd, MMMM d, yyyy}",Model.AddDate)</p>
<p>Number in Stock: @Model.NumberInStock</p>