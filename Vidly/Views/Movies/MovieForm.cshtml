@model Vidly.ViewModel.NewMovieViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <form class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ReleaseDate, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.ReleaseDate, "{0:yyyy/M/d}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ReleaseDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MovieGenreId, new { @class = "col-sm-2 control-label" })
            @Html.DropDownListFor(m => m.MovieGenreId, new SelectList(Model.MovieGenres, "Id", "Genre"), "Select Movie Genre", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MovieGenreId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NumberInStock, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NumberInStock)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PurchaseNumber, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.PurchaseNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PurchaseNumber)
        </div>

        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}