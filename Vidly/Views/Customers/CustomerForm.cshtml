@model Vidly.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <form class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Name, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.MembershipTypeId, new { @class = "col-sm-2 control-label" })
            @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Birthday, new { @class = "col-sm-2 control-label" })
            @Html.TextBoxFor(m => m.Customer.Birthday, "{0:yyyy/M/d}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.Birthday)
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed To Newsletter?
                    </label>
                </div>
            </div>
        </div>
        @Html.HiddenFor(m => m.Customer.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}